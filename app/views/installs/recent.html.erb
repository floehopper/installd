<h2>Recent Apps</h2>

<div class="yui-gb">
  <div class="yui-u first">
    <ul class="installs">
      <% @installs[0..4].each_with_index do |install, index| %>
        <% app = install.app %>
        <% last = (index % 5 == 4) ? ' last' : '' %>
          <li class="install<%= last %>">
            <%= icon(app) %>
            <%= heading(app) %>
            <p class="firstOfTwoParagraphs">
              purchased by <%= link_to install.user.login, user_path(install.user) %> <%= time_ago_in_words(install.purchased_at).gsub(/about /, '') %> ago for <%= install.display_price.downcase %>
            </p>
            <p class="lastOfTwoParagraphs">
              released <%= time_ago_in_words(install.released_at) %> ago
            </p>
          </li>
      <% end %>
    </ul>
  </div>

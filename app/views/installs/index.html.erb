<h2>Applications Installed by <%= h(@user.login) %></h2>

<ul class="installs">
  <%- @installs.each do |install| -%>
    <%- app = install.app -%>
      <li class="app">
        <%= link_to image_tag(app.icon_url), app.url, :class => 'icon' %> <%= link_to app.name, app.url, :class => 'name' %>
      </li>
  <%- end -%>
</ul>

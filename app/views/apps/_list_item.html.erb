<li class="install<%= last %>">
  <%= icon(app) %>
  <div class="heading">
    <%= heading(app) %>
    <%= stars(app['average_rating'].to_i || app.average_rating) %>
    <%= buy_link(app) %>
  </div>
  <div class="details">
    <p>
      purchased by <%= pluralize(app['number_of_installs'] || app.installs.size, 'user') %>
    </p>
  </div>
</li>

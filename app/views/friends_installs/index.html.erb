<h2>Applications Installed by Friends of <%= h(@user.login) %></h2>

<table class="appsInstalledByFriends">
  <thead>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <%- @friends_installs.each do |install| -%>
      <%- app = install.app -%>
      <tr class="app">
        <td class="icon">
          <%= link_to image_tag(app.icon_url), app.url %>
        </td>
        <td class="name">
          <%= link_to app.name, app.url %>
        </td>
      </tr>
    <%- end -%>
  </tbody>
</table>
<% form_for(review, :html => { :class => 'rating' }) do |form| %>
  <%= form.hidden_field :user_id %>
  <%= form.hidden_field :app_id %>
  <%= form.radio_button :rating, 1, :class => 'auto-submit-star' %>
  <%= form.radio_button :rating, 2, :class => 'auto-submit-star' %>
  <%= form.radio_button :rating, 3, :class => 'auto-submit-star' %>
  <%= form.radio_button :rating, 4, :class => 'auto-submit-star' %>
  <%= form.radio_button :rating, 5, :class => 'auto-submit-star' %>
  <%= form.submit 'Rate', :class => 'rate' %>
  <%= image_tag 'progress.gif', :class => 'progress' %>
<% end %>

<h2 class="pageHeading">Lookup a User</h2>

<div class="yui-g">

  <p>
    See what apps other people have installed.
  </p>
  
  <% form_tag lookup_users_path, :method => :get do %>
    <p>
      <%= label_tag 'Login:' %>
      <%= text_field_tag 'login' %>
    </p>
    <p>
      <%= submit_tag 'Lookup' %>
    </p>
  <% end %>

</div>
<h1><%= h(@user.login) %></h1>

<%- if current_user -%>
  <%- if current_user.can_connect?(@user) -%>
  <p>
    <%= link_to 'Add to my network', new_user_connection_path(@user) %>
  </p>
  <%- elsif current_user.already_connected?(@user) -%>
  <p>
    This user is in your network.
  </p>
  <%- end -%>
<%- end -%>

<h2>Apps Installed</h2>

<ul class="installs">
  <%- @installs.each do |install| -%>
    <%- app = install.app -%>
      <li class="install">
        <span class="app"><%= link_to image_tag(app.icon.url), app.url, :class => 'icon' %> <%= link_to app.name, app.url, :class => 'name' %></span>
      </li>
  <%- end -%>
</ul>

<%= will_paginate @installs %>

<h2>Your Network</h2>

<ul class="network">
  <%- @connected_users.each do |user| -%>
    <li>
      <%= link_to user.login, user %>
    </li>
  <%- end -%>
</ul>

<p>
  <%= link_to 'Apps in Network', user_network_path(@user) %>
</p>

